<div class="container">
	<div class="row">
		<div class="col-xs-3"></div>
		<div class="col-xs-6">
			<h3 class="editingmembers">投稿編集フォーム</h3>
			<%=form_for(@member) do |f| %>
			<h4>名前</h4>
			<%=f.text_field :namae %>
			<h4>応援メッセージ</h4>
			<%=f.text_area :body %>
			<div><%=f.submit "再投稿する" %></div>
			<%=link_to "Show", member_path(@member.id) %>
			|
			<%=link_to "Back" members_path %>
		</div>
		<div class="col-xs-3"></div>
	</div>
</div>