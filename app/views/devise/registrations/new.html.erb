<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>

    <div class="col-xs-6">


  <h2>新規登録フォーム</h2>

 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render "devise/shared/error_messages", resource: resource %>

   <div class="field">
     <%= f.label :name %><br />
     <%= f.text_field :name, autofocus: true, autocomplete: "name",　class:"btn-block" %>
   </div>


   <div class="field">
     <%= f.label :email %><br />
     <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"btn-block" %>
   </div>

   <div class="field">
     <%= f.label :password %>
     <% if @minimum_password_length %>
     <em>(<%= @minimum_password_length %> characters minimum)</em>
     <% end %><br />
     <%= f.password_field :password, autocomplete: "new-password", class:"btn-block" %>
   </div>

   <div class="field">
     <%= f.label :password_confirmation %><br />
     <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"btn-block" %>
   </div>

   <div class="actions">
    <%= f.submit "Sign up",class:"btn btn-primary btn-block" %>
   </div>
 <% end %>

<%= render "devise/shared/links", class:"btn btn-warning btn-block" %>

</div>

<div class="col-xs-3"></div>

 </div>

</div>
