<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>

    <div class="col-xs-6">

<h2>パスワード再発行フォーム</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"btn-block" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions",class:"btn btn-info btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

<div class="col-xs-3"></div>

 </div>

</div>

