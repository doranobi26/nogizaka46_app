<div class="container b">
	<div class="row">
		<div class="col-xs-3">
			<h3 class="user-imfo">ユーザー情報</h3>

					<%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>

                 <table class="table">
                  <tbody>
					<tr>
						<th>Name</th>
						<th><%=@user.name %></th>
					</tr>

				    <tr>
				    	<th>introduction</th>
				    	<th><%=@user.introduction %></th>
				    </tr>
			      </tbody>
			     </table>

			<%=link_to edit_user_path(@user.id), class:"btn btn-info  btn-block btn-sm" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>

		　<h3>推しメンバー</h3>
		　<%=form_for(@member) do |f| %>
		　<h4>名前</h4>
		　<%=f.text_field :namae %>
		　<h4>応援メッセージ</h4>
		　<%=f.text_area :body %>
		　<%=f.submit "投稿" %>
		　<% end %>
		</div>

		<div class="col-xs-9">
			<h3 class="members">Members</h3>
			<table class="table table-hover table-invrese">
				<thead>
					<th></th>
					<th>名前</th>
					<th>応援メッセージ</th>
					<th></th>
				</thead>

				<tbody>
					<% @members.each do |member| %>
				 <tr>
					<td>
						<%=link_to member_path(member.id) do %>
						<%=attachment_image_tag member.user, :profile_image, size: "40x40", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>
						<% end %>
					</td>
					<td>
						<%=link_to member.namae, member_path(member.id) %>
					</td>
					<td>
						<%=member.body %>
					</td>
					<td>

					</td>





				  </tr>
				  <% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
