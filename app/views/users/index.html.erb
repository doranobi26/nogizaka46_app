<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h3 class="user-imfo">ユーザー情報</h3>

					<%= attachment_image_tag current_user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>

                 <table class="table">
                  <tbody>
					<tr>
						<th>Name</th>
						<th><%=current_user.name %></th>
					</tr>

				    <tr>
				    	<th>introduction</th>
				    	<th><%=current_user.introduction %></th>
				    </tr>
			      </tbody>
			     </table>

			<%=link_to edit_user_path(current_user), class:"btn btn-info  btn-block btn-sm" do %>
			<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
			<% end %>

		　<h3>推しメンバー</h3>
		　<%=form_for(@member) do |f| %>
		　<h4>名前</h4>
		　<%=f.text_field :namae %>
		　<h4>応援メッセージ</h4>
		　<%=f.text_area :body %>
		　<%=f.submit "投稿" %>
		　<% end %>
		</div>

		<div class="col-xs-9">
			<h3 class="users-index">Users</h3>
			<table class="table table-hover table-invrese">
				<thead>
					<th>画像</th>
					<th>名前</th>
					<th></th>
				</thead>

				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%=attachment_image_tag user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle", fallback: "no_image.jpg" %>

						</td>

						<td>
							<%=user.name %>
						</td>
						<td>
							<%=link_to "Show",user_path(user.id) %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>

